                    android:id="@+id/button43"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textSize="@dimen/text_size_s"
                    android:text="43"/>
            <Button
                    android:id="@+id/button44"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
